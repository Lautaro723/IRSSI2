#!/bin/bash
###### 
  ##  
  ##  
  ##  
######
while :
do
source colores.sh
clear
if [ ! "$(command -v irssi)" ]; then
clear
echo -e " $azul  [${rojo}â${azul}]$cyan las dependencias no estan instaladas$azul [${rojo}â$azul]"
sleep 1.3
clear
echo "       [ğŸ”°] instalando las dependencias [ğŸ”°] "
sleep 1.3
pkg install irssi
clear
echo "    [ğŸ”°] las dependencias estan instaladas [ğŸ”°] "
sleep 2.1
clear
bash irssi2
else

read -p $'\e\033[3;31m ingresa un nombre de usuario \e\033[38;5;31m' usuario

if [ -r $usuario ];then
echo -e "$azul[${rojo}â$azul]${rojo2}$cyan se nesesita un nombre de usuario para iniciar ${GRAY}${azul}[${rojo}â$azul]"
sleep 3.1
else

echo " aprete CTRL + Z para salir de la herramienta "
irssi -c chat.freenode.net -n $usuario 

fi


fi 
done
